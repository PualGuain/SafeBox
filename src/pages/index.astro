                marquee.addEventListener('mouseleave', function(){ track.style.animationPlayState = 'running'; });
                marquee.addEventListener('touchstart', function(){ track.style.animationPlayState = 'paused'; }, { passive: true });
                marquee.addEventListener('touchend', function(){ track.style.animationPlayState = 'running'; });
            }
            // strength tracks are now static grid layouts - no animation logic needed
            var catBtns = document.querySelectorAll('.category-btn');
            var grids = document.querySelectorAll('.product-grid');
            var titleEl = document.getElementById('productTitle');

            function updateTitle(cat) {
                if (!titleEl) return;
                var name = cat === 'archives' ? '档案装具' : cat === 'library' ? '图书馆设备' : '其他';
                titleEl.textContent = '核心产品 - ' + name;
            }

            function showCategory(cat) {
                grids.forEach(function(g){
                    if (g.getAttribute('data-category') === cat) {
                        g.classList.remove('hidden');
                    } else {
                        g.classList.add('hidden');
                    }
                });
            }

            catBtns.forEach(function(btn){
                btn.addEventListener('click', function(){
                    catBtns.forEach(function(b){ b.classList.remove('active'); });
                    btn.classList.add('active');
                    var cat = btn.getAttribute('data-category');
                    showCategory(cat);
                    updateTitle(cat);
                });
            });

            // initialize
            showCategory('archives');
            updateTitle('archives');
            var consultBtn = document.querySelector('.banner-btn');
            if (consultBtn) {
                consultBtn.addEventListener('click', function(e){
                    e.preventDefault();
                    var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
                    if (isMobile) {
                        window.location.href = 'tel:18779535167';
                    } else {
                        var contact = document.getElementById('contact');
                        if (contact && contact.scrollIntoView) contact.scrollIntoView({ behavior: 'smooth' });
                        else window.location.hash = '#contact';
                    }
                });
            }
        })();
    </script>
</body>
